from http import HTTPStatus

from flask import Blueprint, jsonify

from {{ module_name }}.config import settings
from {{ module_name }}.schemas.info import stats


api = Blueprint("info", __name__)


@api.route("/stats", methods=["GET"])
def fetch_stats():
    return jsonify(stats.model_dump(mode="json")), HTTPStatus.OK


@api.route("/config", methods=["GET"])
def fetch_config():
    return jsonify(settings.model_dump(mode="json")), HTTPStatus.OK
