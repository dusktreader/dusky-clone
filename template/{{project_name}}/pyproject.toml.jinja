[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ project_summary }}"
authors = [
    {name = "{{ author_name }}", email ="{{ author_email }}"},
]
readme = "README.md"
license-files = ["LICENSE.md"]

requires-python = ">={{ python_versions[0] }}, ~={{ python_versions[-1] }}"
dependencies = [
    "auto-name-enum~=3.0",
    "flask~=3.1",
    "flask-buzz~=4.0",
    "flask-http-middleware~=0.4",
    "loguru~=0.7",
    "pydantic~=2.11",
    "pydantic-settings~=2.8",
    "whenever~=0.7",
]


[project.urls]
homepage = "https://github.com/{{ github_account }}/{{project_name}}"
source = "https://github.com/{{ github_account }}/{{project_name}}"
changelog = "https://github.com/{{ github_account }}/{{project_name}}/blob/main/CHANGELOG.md"


[dependency-groups]
dev = [
    "basedpyright~=1.28",
    "ipython~=8.18",
    "logot[loguru,pytest]~=1.3",
    "mkdocs-material~=9.6",
    "mkdocstrings[python]~=0.29",
    "mypy~=1.15",
    "pyclean~=3.1",
    "pygments~=2.19",
    "pytest~=8.3",
    "pytest-cov~=6.0",
    "pytest-pretty~=1.2",
    "pytest-random-order~=1.1",
    "ruff~=0.11",
    "time-machine~=2.16",
    "typos~=1.31",
    "logot[loguru,pytest]~=1.3",
    "debugpy~=1.8",
    "httpx~=0.28",
]


[tool.uv]
package = true


[tool.pytest.ini_options]
addopts = [
    "--random-order",
    "--cov=src/{{ module_name }}",
    "--cov-report=term-missing",
    "--cov-fail-under=85",
    "--cov-report=xml:.coverage.xml",
    "--junitxml=.junit.xml",
    "--override-ini=junit_family=legacy",
]


[tool.ruff]
line-length = 120
src = ["src/{{ module_name }}", "tests"]


[tool.ruff.format]
docstring-code-format = true


[tool.mypy]
pretty = true
files = ["src/{{ module_name }}", "tests"]
check_untyped_defs = true

[[tool.mypy.overrides]]
module = [
    "flask_http_middleware",
]
ignore_missing_imports = true


[tool.basedpyright]
reportAny = false
reportExplicitAny = false
reportUnusedCallResult = false


[tool.typos.default]
extend-ignore-identifiers-re = [
    "ane_auto",
    "function_ser_schema",
]


[tool.hatch.build.targets.wheel]
packages = ["src/{{ module_name }}"]


[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"
